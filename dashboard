#!upstart

description "Dashboard node.js server"
author	    "Fady Abdelmohsen"

start on startup
stop on shutdown

script
	export HOME="/root"

	echo $$ > /var/run/node.pid    
	exec sudo -u cslab NODE_ENV=production PORT=4000 /usr/local/bin/node /usr/local/www/serv.js >> /var/log/dashboard.sys.log 2>&1
end script

pre-start script
    # Date format same as (new Date()).toISOString() for consistency
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Starting" >> /var/log/dashboard.sys.log
end script

pre-stop script
    rm /var/run/node.pid
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Stopping" >> /var/log/dashboard.sys.log
end script
