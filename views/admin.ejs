<% include header %>
<div class="spinner"></div>
<div class="extra">
    <div class="main1"></div>
    <div class="main2">

        <div class="grad1"></div>
        <div id="clockbox"></div>
    
        <!--  Header  -->
        <header>
            <a href="#" class="logo">
                <img src="images/logo.png">
                <div class="txt1">Acadia University</div>
                <div class="txt2">Energy Dashboard</div>
            </a>
        </header>
        <% include menu %>
        <div class="mid">
            <% if (!user) { %>
                <h2 id="greeting">Welcome! Please log in.</h2>
	            
                <form action="/login" id="login" method="post">
                    <div id="formField">
                        <label>Username:</label>
                        <input type="text" id="uname_input" name="username"/><br/>
                    </div>
                    <div id="formField">
                        <label>Password:</label>
                        <input type="password" id="pass_input" name="password"/>
                    </div>
                    <div>
                        <% if (message) { %>
                            <p><%= message %></p>
                        <% } %>
                        <button type="submit" value="login">Login</button>
                    </div>
                </form>
    <!-- </div>   -->
            <% } else { %>
               <h2 id="greeting" >Hello, <%= user.username %>.</h2>
            <% } %>
            <div class="">
                
            </div>
        </div>
    </div>
</div>
<% include footer %>